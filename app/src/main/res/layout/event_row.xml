<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/event_row_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:gravity="center"
        android:text="@string/event_name"/>

    <ImageView
        android:id="@+id/event_row_image"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_gravity="center"
        android:src="@drawable/ic_eventimg"
        android:contentDescription="@string/event_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_row_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/helveticaneue_bold"
            android:layout_marginStart="3dp"
            android:text="@string/event_start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/helveticaneue_bold"
            android:layout_marginStart="10dp"
            android:text="to"/>

        <TextView
            android:id="@+id/event_row_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/helveticaneue_bold"
            android:layout_marginStart="10dp"
            android:text="@string/event_end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/event_row_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:gravity="center_vertical"
        android:text="@string/event_location"/>

    <TextView
        android:id="@+id/event_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:gravity="center_vertical"
        android:text="@string/event_time"/>

</LinearLayout>